@page "/MarkupMain"
@inherits MarkupMainComponent

@code {
    
}


<div id="mainDiv" tabindex="0" @onkeydown="HandleKeyDown" @ref="@refMainPanel" class="container-fluid px-0 py-0 ">
    <div class="row">
        <div id="ImageMainId" class="border border-info col-xl-10 overflow-auto px-1 py-1" style="height: 1000px">
            @{
                <DrawingConvasComponent Height="@SizeImgForm.Height" Width="@SizeImgForm.Width"></DrawingConvasComponent>
            }

        </div>
        <div class="col-xl-2 ">
            <div class="border border-info row overflow-auto px-0 py-1 text-center " style="height: 150px;">
                @{
                    var paletteData = _markupControlService.GetPaletteAsync().Result;
                    <PaletteGridViewComponent PaletteData="@paletteData"@ref="@_refPaletteGridViewComponent"></PaletteGridViewComponent>
                }
            </div>
            <div class="border border-info row overflow-auto px-1 py-1 text-center" style="height: 850px">
                @{
                    var images = _markupControlService.GetAllFileNamesAsync().Result;
                    <ImagesGridViewComponent Images="@images" @ref="@_refImagesGridViewComponent"></ImagesGridViewComponent>
                }

            </div>
        </div>

    </div>

</div>